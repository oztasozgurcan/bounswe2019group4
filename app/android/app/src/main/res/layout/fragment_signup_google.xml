<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/signup_google_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:background="@drawable/login_background"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/signup_google_tcknTag_textView"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="TC id"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_tckn_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/signup_google_tckn_editText" />

        <EditText
            android:id="@+id/signup_google_tckn_editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorAccent"
            android:inputType="number"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/signup_google_tcknTag_textView"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/google_location_editText" />

        <TextView
            android:id="@+id/signup_ibanTag_textView"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="IBAN"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_iban_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/signup_google_iban_editText" />

        <EditText
            android:id="@+id/signup_google_iban_editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/signup_ibanTag_textView"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/signup_google_tckn_editText" />

        <ImageButton
            android:id="@+id/signup_google_location_button"
            android:layout_width="59dp"
            android:layout_height="46dp"
            android:layout_marginEnd="24dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/signup_google_submit_button"></ImageButton>

        <TextView
            android:id="@+id/signup_google_location_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Find your location"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/signup_google_location_button"
            app:layout_constraintStart_toStartOf="@id/signup_google_location_button"
            app:layout_constraintTop_toBottomOf="@id/signup_google_location_button" />

        <Switch
            android:id="@+id/signup_google_isTrader_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_google_iban_editText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Basic"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_isTrader_switch"
            app:layout_constraintEnd_toStartOf="@id/signup_google_isTrader_switch"
            app:layout_constraintTop_toTopOf="@+id/signup_google_isTrader_switch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Trader"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_isTrader_switch"
            app:layout_constraintStart_toEndOf="@id/signup_google_isTrader_switch"
            app:layout_constraintTop_toTopOf="@id/signup_google_isTrader_switch" />
        <Switch
            android:id="@+id/google_isPublic_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/signup_google_isTrader_switch"
            app:layout_constraintStart_toEndOf="@id/signup_google_isTrader_switch"
            app:layout_constraintTop_toTopOf="@id/signup_google_isTrader_switch"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Private"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/google_isPublic_switch"
            app:layout_constraintStart_toEndOf="@id/google_isPublic_switch"
            app:layout_constraintTop_toTopOf="@id/google_isPublic_switch" />

        <Button
            android:id="@+id/signup_google_submit_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/comment_background"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/signup_google_location_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_google_isTrader_switch"></Button>

        <TextView
            android:id="@+id/google_locationTag_textView"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:text="Location"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/google_location_editText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/google_location_editText" />

        <EditText
            android:id="@+id/google_location_editText"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_edit_text"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorAccent"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/google_locationTag_textView"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>